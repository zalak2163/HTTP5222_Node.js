extends ../layout

block content
  .container
    h1 Add Project
    form(action="/admin/add-project" method="POST")
      input(type="text" name="title" placeholder="Project Title" required)
      textarea(name="description" placeholder="Project Description" required) 
      input(type="text" name="link" placeholder="Project Link")
      select(name="type" required)
        option(value="" disabled selected) Select Project Type
        option(value="web") Web
        option(value="mobile") Mobile
        option(value="desktop") Desktop
      input(type="number" name="teamSize" placeholder="Team Size" min="1" required) 
      input(type="text" name="technologies" placeholder="Technologies Used (comma separated)" required) 
      input(type="date" name="startDate" required)
      select(name="status" required)
        option(value="" disabled selected) Select Status
        option(value="in-progress") In Progress
        option(value="completed") Completed
        option(value="on-hold") On Hold
      button(type="submit") Add Project
